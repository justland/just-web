{
	"name": "@just-web/states",
	"version": "7.3.0",
	"description": "State management for just-web application",
	"keywords": [
		"just-web",
		"framework",
		"state management"
	],
	"homepage": "https://github.com/justland/just-web/tree/main/libraries/states",
	"bugs": {
		"url": "https://github.com/justland/just-web/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/justland/just-web.git",
		"directory": "libraries/states"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong (unional)",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./esm/index.d.ts",
				"default": "./esm/index.mjs"
			},
			"require": {
				"types": "./cjs/index.d.cts",
				"default": "./cjs/index.cjs"
			},
			"default": "./esm/index.mjs"
		}
	},
	"main": "./cjs/index.cjs",
	"module": "./esm/index.mjs",
	"types": "./esm/index.d.ts",
	"files": [
		"cjs",
		"esm",
		"src",
		"!**/*.{spec,test,unit,accept,integrate,system,perf,stress}.*"
	],
	"scripts": {
		"build": "run-s build:code build:types",
		"build:code": "tsdown --tsconfig tsconfig.build.json",
		"build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
		"build:watch": "tsc -w",
		"clean": "rimraf cjs esm coverage tslib --glob *.tsbuildinfo",
		"coverage": "vitest run --coverage",
		"nuke": "rimraf node_modules",
		"size": "size-limit",
		"test": "vitest run",
		"test:watch": "vitest",
		"w": "pnpm test:watch",
		"verify": "npm-run-all -p build lint coverage -p size"
	},
	"dependencies": {
		"immer": "^11.1.3",
		"tersify": "^3.10.2",
		"type-plus": "8.0.0-beta.7"
	},
	"devDependencies": {
		"@just-web/app": "workspace:^",
		"@just-web/repo-scripts": "workspace:^",
		"@repobuddy/typescript": "^2.1.0",
		"@repobuddy/vitest": "catalog:",
		"@size-limit/preset-small-lib": "~12.0.0",
		"@vitest/coverage-v8": "^4.0.15",
		"assertron": "^11.2.0",
		"npm-run-all2": "^6.0.0",
		"repobuddy": "^1.0.1",
		"rimraf": "~6.1.2",
		"size-limit": "~12.0.0",
		"tsdown": "^0.20.1",
		"vitest": "^4.0.15"
	}
}
