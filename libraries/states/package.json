{
  "name": "@just-web/states",
  "version": "5.0.2",
  "description": "State management for just-web application",
  "keywords": [
    "just-web",
    "framework",
    "state management"
  ],
  "homepage": "https://github.com/justland/just-web/tree/main/libraries/states",
  "bugs": {
    "url": "https://github.com/justland/just-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justland/just-web.git",
    "directory": "libraries/states"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js",
    "default": "./esm/index.js",
    "types": "./esm/index.d.ts"
  },
  "source": "./ts/index.ts",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && ncp ../../config/package.cjs.json cjs/package.json",
    "build:esm": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf cjs esm coverage lib *.tsbuildinfo",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "depcheck": "depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,tsx,js,yaml,yml .",
    "nuke": "rimraf node_modules",
    "size": "size-limit",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "verify": "npm-run-all -p build lint coverage depcheck -p size"
  },
  "dependencies": {
    "@just-web/log": "workspace:^",
    "immer": "npm:@unional/immer@^9.0.0-beta.2",
    "tersify": "^3.10.2",
    "type-plus": "^4.18.0"
  },
  "devDependencies": {
    "@just-web/repo-scripts": "workspace:^",
    "@size-limit/preset-small-lib": "~8.1.0",
    "@types/jest": "^29.2.3",
    "cross-env": "^7.0.3",
    "depcheck": "~1.4.3",
    "eslint": "^8.11.0",
    "eslint-plugin-harmony": "^7.1.1",
    "jest": "^29.3.1",
    "jest-validate": "^29.3.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.2.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "~3.0.2",
    "size-limit": "~8.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "typedoc": {
    "entryPoint": "./ts/index.ts",
    "readmeFile": "./README.md"
  }
}
