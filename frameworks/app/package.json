{
  "name": "@just-web/app",
  "version": "0.1.0",
  "description": "Just a web application framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib *.tsbuildinfo",
    "coverage": "jest --coverage 2>&1",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,tsx,js,yaml,yml .",
    "test": "jest 2>&1",
    "test:watch": "jest --watch",
    "verify": "run-p build lint coverage",
    "verify:build": "run-s clean build depcheck"
  },
  "dependencies": {
    "@just-web/commands": "workspace:*",
    "@just-web/contexts": "workspace:*",
    "@just-web/contributions": "workspace:*",
    "@just-web/errors": "workspace:*",
    "@just-web/log": "workspace:*",
    "@just-web/platform": "workspace:*",
    "@just-web/plugins": "workspace:*",
    "@just-web/routes": "workspace:*",
    "@just-web/states": "workspace:*",
    "standard-log": "~7.0.2",
    "type-plus": "~4.9.0"
  },
  "devDependencies": {
    "@babel/core": "~7.17.8",
    "@babel/plugin-transform-runtime": "~7.17.0",
    "@just-web/repo-scripts": "workspace:*",
    "@just-web/testing": "workspace:*",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "depcheck": "~1.4.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-harmony": "^6.0.2",
    "eslint-plugin-yml": "~0.14.0",
    "jest": "^27.5.1",
    "jest-validate": "^27.5.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "npm-check-updates": "~12.5.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "~3.0.2",
    "size-limit": "^7.0.8",
    "typescript": "^4.6.3"
  },
  "size-limit": [
    {
      "limit": "15 kb"
    }
  ]
}
