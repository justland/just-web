{
  "name": "@just-web/platform",
  "version": "0.2.5",
  "description": "All about platform - where the code is executed",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf coverage lib *.tsbuildinfo",
    "coverage": "jest --coverage 2>&1",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,tsx,js,yaml,yml .",
    "nuke": "run-s clean nuke:local",
    "nuke:local": "rimraf node_modules || true",
    "test": "jest 2>&1",
    "test:watch": "jest --watch",
    "verify": "run-p build lint coverage depcheck",
    "verify:build": "run-s clean build depcheck"
  },
  "dependencies": {
    "@just-web/commands": "workspace:*",
    "@just-web/contributions": "workspace:*",
    "@just-web/log": "workspace:*",
    "mousetrap": "~1.6.5",
    "platform": "~1.3.6",
    "type-plus": "^4.13.1"
  },
  "devDependencies": {
    "@babel/core": "~7.18.0",
    "@babel/plugin-transform-runtime": "~7.18.0",
    "@just-web/repo-scripts": "workspace:*",
    "@just-web/testing": "workspace:*",
    "@size-limit/preset-small-lib": "~7.0.8",
    "@types/jest": "^27.4.1",
    "@types/mousetrap": "~1.6.9",
    "@types/platform": "~1.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "depcheck": "~1.4.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-harmony": "^7.0.0",
    "eslint-plugin-yml": "~0.14.0",
    "jest": "^27.5.1",
    "jest-validate": "^27.5.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "npm-check-updates": "~12.5.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "~3.0.2",
    "size-limit": "~7.0.8",
    "typescript": "^4.7.4"
  },
  "size-limit": [
    {
      "limit": "15 kb"
    }
  ]
}
