{
	"name": "@just-web/browser-preferences",
	"version": "8.4.2",
	"description": "browser implementation for @just-web/preferences",
	"keywords": [
		"just-web",
		"framework"
	],
	"homepage": "https://github.com/justland/just-web/tree/main/plugins/browser-preferences",
	"bugs": {
		"url": "https://github.com/justland/just-web/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/justland/just-web.git",
		"directory": "plugins/browser-preferences"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong (unional)",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./esm/index.d.ts",
				"default": "./esm/index.js"
			},
			"require": {
				"types": "./cjs/index.d.cts",
				"default": "./cjs/index.cjs"
			},
			"default": "./esm/index.js"
		},
		"./testing": {
			"import": {
				"types": "./esm/testing/index.d.ts",
				"default": "./esm/testing/index.js"
			},
			"require": {
				"types": "./cjs/testing/index.d.cts",
				"default": "./cjs/testing/index.js"
			},
			"default": "./esm/testing/index.js"
		}
	},
	"main": "./cjs/index.cjs",
	"module": "./esm/index.js",
	"types": "./cjs/index.d.cts",
	"files": [
		"cjs",
		"esm",
		"testing",
		"src",
		"!**/*.{spec,test,unit,accept,integrate,system,perf,stress}.*"
	],
	"scripts": {
		"build": "tsdown",
		"clean": "rimraf cjs esm coverage tslib --glob *.tsbuildinfo",
		"coverage": "vitest run --coverage",
		"nuke": "rimraf node_modules",
		"size": "size-limit",
		"test": "vitest run",
		"test:watch": "vitest",
		"w": "pnpm test:watch",
		"verify": "npm-run-all -p build lint coverage -p size"
	},
	"dependencies": {
		"@just-web/preferences": "workspace:^",
		"@just-web/states": "workspace:^",
		"immer": "npm:@unional/immer@^9.0.0-beta.2",
		"js-base64": "^3.7.3",
		"type-plus": "8.0.0-beta.7"
	},
	"devDependencies": {
		"@just-web/app": "workspace:^",
		"@just-web/browser": "workspace:^",
		"@just-web/commands": "workspace:^",
		"@just-web/keyboard": "workspace:^",
		"@just-web/repo-scripts": "workspace:^",
		"@repobuddy/typescript": "^1.2.0",
		"@repobuddy/vitest": "catalog:",
		"@size-limit/preset-small-lib": "~11.2.0",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15",
		"assertron": "^11.2.0",
		"npm-run-all2": "^6.0.0",
		"repobuddy": "^1.0.1",
		"rimraf": "~6.1.0",
		"size-limit": "~11.2.0",
		"tsdown": "^0.15.12",
		"vitest": "^4.0.15"
	},
	"peerDependencies": {
		"@just-web/app": "workspace:^",
		"@just-web/browser": "workspace:^",
		"@just-web/commands": "workspace:^",
		"@just-web/fetch": "workspace:^",
		"@just-web/keyboard": "workspace:^"
	},
	"peerDependenciesMeta": {
		"@just-web/keyboard": {
			"optional": true
		}
	}
}
