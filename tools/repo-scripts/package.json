{
  "name": "@just-web/repo-scripts",
  "version": "0.2.0",
  "description": "just-web shared repository config and scripts",
  "keywords": [
    "just-web",
    "framework",
    "repo-scripts"
  ],
  "homepage": "https://github.com/justland/just-web/tree/main/tools/repo-scripts",
  "bugs": {
    "url": "https://github.com/justland/just-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justland/just-web.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com",
    "url": "https://github.com/unional"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "config",
    "lib",
    ".depcheckrc.yml",
    ".eslint*",
    "babel*",
    "jest*",
    "tsconfig.*",
    "!**/*.{spec,test,unit,accept,integrate,system}.*"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf coverage lib *.tsbuildinfo",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,tsx,js,yaml,yml .",
    "nuke": "rimraf node_modules",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "verify": "run-p build lint coverage depcheck"
  },
  "dependencies": {
    "@babel/core": "~7.20.0",
    "@babel/plugin-transform-runtime": "~7.19.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "depcheck": "~1.4.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-harmony": "^7.1.1",
    "eslint-plugin-storybook": "^0.6.6",
    "eslint-plugin-yml": "~1.3.0",
    "jest": "^29.3.1",
    "jest-validate": "^29.3.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.2.1",
    "npm-check-updates": "~16.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "~3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@repobuddy/jest": "^2.2.1",
    "@size-limit/preset-small-lib": "~8.1.0",
    "cross-env": "^7.0.3",
    "size-limit": "~8.1.0"
  },
  "size-limit": [
    {
      "limit": "15 kb"
    }
  ],
  "typedoc": {
    "entryPoint": "./ts/index.ts",
    "readmeFile": "./README.md"
  }
}
