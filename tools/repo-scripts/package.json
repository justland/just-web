{
	"name": "@just-web/repo-scripts",
	"version": "0.2.1",
	"description": "just-web shared repository config and scripts",
	"keywords": [
		"just-web",
		"framework",
		"repo-scripts"
	],
	"homepage": "https://github.com/justland/just-web/tree/main/tools/repo-scripts",
	"bugs": {
		"url": "https://github.com/justland/just-web/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/justland/just-web.git"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong (unional)",
		"email": "homawong@gmail.com",
		"url": "https://github.com/unional"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js"
		},
		"./config/*": "./config/*"
	},
	"files": [
		"config",
		"lib",
		".eslint*",
		"babel*",
		"tsconfig.*",
		"!**/*.{spec,test,unit,accept,integrate,system,perf,stress}.*"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"clean": "rimraf coverage lib --glob *.tsbuildinfo",
		"coverage": "vitest run --coverage",
		"nuke": "rimraf node_modules",
		"test": "vitest run",
		"test:watch": "vitest",
		"verify": "run-p build coverage"
	},
	"dependencies": {
		"@babel/core": "~7.24.0",
		"@babel/plugin-transform-runtime": "~7.24.0",
		"@rushstack/eslint-patch": "^1.2.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-v8": "^4.0.15",
		"eslint": "^8.11.0",
		"eslint-config-prettier": "~9.1.0",
		"eslint-plugin-harmony": "^7.1.1",
		"eslint-plugin-storybook": "^0.8.0",
		"eslint-plugin-yml": "~1.14.0",
		"npm-run-all2": "^6.0.0",
		"rimraf": "~5.0.0",
		"tsdown": "^0.15.12",
		"typescript": "^5.0.4",
		"vitest": "^4.0.15"
	},
	"devDependencies": {
		"@repobuddy/vitest": "catalog:",
		"@size-limit/preset-small-lib": "~11.2.0",
		"size-limit": "~11.2.0"
	},
	"size-limit": [
		{
			"limit": "15 kb"
		}
	],
	"typedoc": {
		"entryPoint": "./ts/index.ts",
		"readmeFile": "./README.md"
	}
}
